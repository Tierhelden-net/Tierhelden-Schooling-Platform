{
    "name": "Next.js Dev Container",
	"dockerComposeFile": [
	  "../docker-compose.yml"
	],
	"service": "app",
	"workspaceFolder": "/app",
    "postStartCommand": "sudo chown -R node:node /app/node_modules",
    "postCreateCommand": "npm install",
	"forwardPorts": [3000],
    "customizations": {
        "vscode": {
            "extensions": [
				"mikestead.dotenv",
				"donjayamanne.git-extension-pack",
				"GitHub.copilot",
				"Tyriar.sort-lines",
				"bennycode.sort-everything",
				"PascalReitermann93.vscode-yaml-sort",
				"Vue.volar",
				"ms-azuretools.vscode-docker"
			]
        },
		"settings": {
			"editor.tabSize": 4,
			"editor.insertSpaces": true,
			"terminal.integrated.shell.linux": "/bin/bash",
			"workbench.editor.enablePreview": false,
			"workbench.editorLargeFileConfirmation": "50 MB",
			"telemetry.telemetryLevel": "off",
			"gitlens.telemetry.enabled": false
		}
    },
    "remoteUser": "node"
  }